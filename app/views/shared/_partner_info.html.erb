<section id="partner_info">
  <div class="info-header">
    <h3>
    <%= link_to partners_path, :class => 'btn btn-default btn-xs back-btn' do %>
      <i class="fa fa-chevron-left"></i>
    <% end %>
    <%= @partner.name %></h3>
  </div>

  <p><strong>Current Balance:</strong> $ <%= @partner.credits %></p>
  <ul class="dm nav nav-tabs responsive" role="tablist">
    <li class="active"><a href="#pinfo" role="tab" data-toggle="tab">Profile Info</a></li>
    <li><a href="#pns" role="tab" data-toggle="tab">Name Server Info</a></li>
    <li><a href="#pricing_tab" role="tab" data-toggle="tab">Pricing</a></li>
  </ul>
  <div class="tab-content">
    <div class="active" id="pinfo"><br>
      <p class="pinfo-note">* This information is for Registry use only and will not be disclosed publicly.</p>
      <hr class="border-gray">
      <div class="pinfo-form-group">
        <div><!-- form-group -->
        <label>
          <%= fa_icon 'user' %> Username</label>
          <div class="inputfield"><%= @partner.name %></div>
        </div>
        <div><!-- form-group -->
          <label>
            <%= fa_icon 'users' %> Company Name</label>
          <div class="inputfield"><%= @partner.organization %></div>
        </div>
        <div><!-- form-group -->
          <label><%= fa_icon 'link' %> Website</label>
          <div class="inputfield"><%= @partner.site %></div>
        </div>
        <div><!-- form-group -->
          <label><%= fa_icon 'briefcase' %> Nature of Business</label>
          <div class="inputfield"><%= @partner.nature %></div>
        </div>
        <div><!-- form-group -->
          <label><%= fa_icon 'user' %> Authorize Representative</label>
          <div class="inputfield"><%= @partner.representative %></div>
        </div>
        <div class="form-group ">
          <label><span>Position</span></label>
          <div class="inputfield"><%= @partner.position %></div>
        </div>
        <div><!-- form-group -->
          <label><%= fa_icon 'home' %> Street</label>
          <div class="inputfield"><%= @partner.street %></div>
        </div>
        <div><!-- form-group -->
          <label><span>City</span></label>
          <div class="inputfield"><%= @partner.city %></div>
        </div>
        <div><!-- form-group -->
          <label><span>State/Province</span></label>
          <div class="inputfield"><%= @partner.state %></div>
        </div>
        <div><!-- form-group -->
          <label><span>Postal Code</span></label>
          <div class="inputfield"><%= @partner.postal_code %></div>
        </div>
        <div><!-- form-group -->
          <label><span>Country</span></label>
          <div class="inputfield"><%= @partner.country_code %></div>
        </div>
        <div><!-- form-group -->
          <label><%= fa_icon 'phone' %> Telephone</label>
          <div class="inputfield"><%= @partner.phone %></div>
        </div>
        <div><!-- form-group -->
          <label><%= fa_icon 'fax' %> Fax</label>
          <div class="inputfield"><%= @partner.fax %></div>
        </div>
        <div><!-- form-group -->
          <label><%= fa_icon 'envelope' %> Email</label>
          <div class="inputfield"><%= @partner.email %></div>
        </div>
      </div>
    </div>
    <div id="pns">
      <br>

      <table id="default_nameservers">
        <thead>
          <tr>
            <th>Nameservers</th>
            <th></th>
            <th class="text-right">
              <button id="editNsBtn" class="btn btn-success btn-xs" onclick="$('#default_nameservers_edit').show();$('#default_nameservers').hide();$('#saveNsBtn').show();$('#submitNsBtn').show();$('#editNsBtn').hide();$('#plusNSLink').show();" style="display: inline-block;">Edit</button>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @partner.default_nameservers.each do |default_nameserver| %>
          <tr>
            <td><%= default_nameserver.name %></td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>

      <table id="default_nameservers_edit" style="display:none;">
        <thead>
          <tr>
            <th>Nameservers</th>
            <th>IP Address</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><input type="text" class="form-control" value="ns1.domains.ph"></td>
            <td><input type="text" class="form-control" value="100.1.1.1"></td>
            <td>&nbsp;</td>
          </tr>
          <tr>
            <td><input class="form-control" value="ns1.domains.ph"></td>
            <td><input class="form-control" type="text" value="100.1.1.2"></td>
            <td>&nbsp;</td>
          </tr>
          <tr class="plusns" style="display:none;">
            <td><input type="text" class="form-control" placeholder="Enter nameserver"></td>
            <td><input type="text" class="form-control" placeholder="Enter ip address"></td>
            <td><i title="Delete NS" data-original-title="Delete NS" class="fa fa-close"></i></td>
          </tr>
        </tbody>
      </table>
      <div class="pull-left" >&nbsp; <a id="plusNSLink" onclick="$('.plusns').show();" href="javascript:;" style="display: none;">
        <i class="fa fa-plus"></i>&nbsp; Add Name Server</a>
      </div>
      <div class="pull-right" id="saveNsBtn" style="display:none" >
        <div id="submitNsBtn">
            <button type="submit" class="btn btn-success" onclick="$('#editNsSpnr').show().delay(2000).fadeOut();$('#submitNsBtn').hide();$('#default_nameservers_edit').delay(2000).fadeOut();$('#default_nameservers').delay(2000).fadeIn();$('#editNsBtn').delay(2000).fadeIn();$('#plusNSLink').hide();">Submit</button>
            <button type="submit" class="btn btn-default " onclick="$('#editNsBtn').show();$('#default_nameservers').show();$('#default_nameservers_edit').hide();$('#saveNsBtn').hide();$('.plusns').hide();$('#plusNSLink').hide();">Cancel</button>
        </div>
    </div>
    </div>
    <div id="pricing_tab">
      <br>
      <table id="pricing">
        <thead>
          <tr>
            <th>Description</th>
            <th>Period</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @partner.pricing.each do |partner_price| %>
          <tr>
            <td><%= order_detail_type partner_price.action %></td>
            <td><%= partner_price.period %></td>
            <td><%= number_to_currency partner_price.price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>

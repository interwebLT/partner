<% content_for :banner_title do %>
<%= fa_icon 'shopping-cart lg' %>&nbsp;Orders
<% end %>

<div id="table">
  <table id="orders">
    <thead>
      <tr>
        <th>Date</th>
        <th>Order No.</th>
        <th>Partner</th>
        <th>Type</th>
        <th>Term</th>
        <th>Domain</th>
        <th>Status</th>
        <th>Amount ($)</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= formatted_timestamp order.ordered_at %></td>
        <td><%= order.order_number %></td>
        <td><%= link_to order.partner, partner_url(order.partner) %></td>
        <td><%= order_detail_type order.type %></td>
        <td><%= order.period %></td>
        <td><%= number_to_currency(order.price) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

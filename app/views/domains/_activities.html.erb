<div class="contact-info-wrapper">
  <div class="title">Domain Activities</div>
  <div class="contact-info">
    <table class="table table-striped table-condensed tablesorter" id="DomainActivities">
      <thead>
        <tr>
          <th class="col-lg-5">Date</th>
          <th class="sorter-disable">Description</th>
        </tr>
      </thead>
      <tbody>
        <% @activities.each do |activity| %>
        <tr>
          <td><%= formatted_timestamp activity.activity_at %></td>
          <td><%= activity_description(activity).html_safe %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() 
  { 
    $("#DomainActivities").tablesorter( 
      {
        sortList: [0],
        headers: { 
          1: { sorter: false }
        } 
      } 

      ); 
  }
); 

</script>